# Make vim the default editor
export EDITOR="vim"
# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"
# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Antlr3
export CLASSPATH=${HOME}/android/apktool:${HOME}/Downloads/antlr-3.5-complete-no-st3.jar:${CLASSPATH}

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:ls *:cd:cd -:pwd;exit:date:* --help"

export PATH=${HOME}/local/bin:${PATH}
export PATH=${HOME}/android-sdk/platform-tools:${PATH}
export PATH=${HOME}/android-ndk:${PATH}
export PATH=${HOME}/android-ndk/toolchains/arm-linux-androideabi-4.6/prebuilt/linux-x86/bin:${PATH}
export PATH=${HOME}/android-ndk/toolchains/x86-4.6/prebuilt/linux-x86/bin:${PATH}
export PATH=/usr/local/sbin:/usr/local/bin:${PATH}
export PATH=${HOME}/git/racket/racket/bin:${PATH}
export PATH=${HOME}/Downloads/Mozart.app/Contents/Resources/bin:${PATH}
export PATH=${HOME}/git/lighthouse/glue/bin:${PATH}
export PATH=${HOME}/Downloads/jdk1.6.0_39/bin:${PATH} 
export USE_CCACHE=1
export CCACHE_DIR=${HOME}/android/.ccache
